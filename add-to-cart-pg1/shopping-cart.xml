<?xml version="1.0"?>
<t name="Shopping Cart" t-name="website_sale.cart">
    <t t-call="website.layout">
        
        <div id="wrap" style="font-family: 'Oxygen', sans-serif">
            <style>
                .first_row_acp{
                    background-color: #f0f0f0;
                    width: 100%;
                }
                ol.breadcrumb{
                    background-color: transparent;
                    padding-top: 25px;
                    margin-bottom: 0;
                    padding-right:0;
                }
                ol.breadcrumb li a, ol.breadcrumb li span{
                    font-size: 12px;
                    color: #656565;
                    text-transform: uppercase;
                }
                .sec_row_acp{
                    padding: 30px;
                    border: 5px solid #f0f0f0;
                }
                .thrd_row_acp{
                    background: #f5f5f5;
                    padding: 20px;
                }
                .act_btn{
                    padding: 15px 35px;
                    border-radius: 0;
                    text-transform: uppercase;
                    font-size: 14px;
                    line-height: 1.3333333;
                    font-weight: bold;
                    font-family: Lato;
                    -webkit-transition: all 0.3s ease-in-out;
                    -moz-transition: all 0.3s ease-in-out;
                    -ms-transition: all 0.3s ease-in-out;
                    -o-transition: all 0.3s ease-in-out;
                    transition: all 0.3s ease-in-out;
                }
                .btn_back_atcp{
                    color: #252525;
                    background: #dedede;
                    min-width: 136px;
                    
                }
                .btn_back_atcp:hover{
                    background: #c1b497;
                    color: white;
                }
                .btn_pc_atcp{
                    background: #c1b497;
                    color: white;
                }
                .btn_pc_atcp:hover{
                    background: #cdc3ab;
                    color: white;
                }
                .breadcrumb_heading_acp{
                    color: #797979;
                    font-weight: 400;
                    font-size:30px;
                }
            </style>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 first_row_acp">
                <div class='container'>
                    <div class='col-sm-6 col-lg-6 padleft_zero'>
                        <h2 class="mb16 text-uppercase breadcrumb_heading_acp">Cart</h2>
                    </div>
                    <div class="col-sm-6 col-lg-6 padright_zero">
                        <ol class="breadcrumb pull-right">
                            <li>
                                <a href="/">Home</a>
                            </li>
                            <li>
                                <a href="/shop">Shop</a>
                            </li>
                            <li class="active">
                                <span>Cart</span>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 mt64 mb64">
                <div class="container oe_website_sale ">
                    <div class='sec_row_acp '>
                        <t t-call="website_sale.wizard_checkout">
                            <t t-set="step" t-value="10"/>
                        </t>
                        <div class="row ">
                            <div class="col-md-12 col-sm-12 oe_cart mt64">
                                <t t-call="website_sale.cart_lines"/>
                                
                                <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 mt24 mb36 thrd_row_acp">
                                    <div class='col-xs-6'>
                                        <a href="/shop" class="btn btn_back_atcp act_btn">
                                            <span class="hidden-xs">Back</span>
                                            <span class="visible-xs-inline">Back</span>
                                        </a>
                                    </div>
                                    <div class='col-xs-3 col-xs-offset-2'>
                                        <a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn_pc_atcp act_btn btn-block" href="/shop/checkout">
                                            <span class="hidden-xs">Checkout</span>
                                            <span class="visible-xs-inline">Checkout</span>
                                        </a>
                                    </div>
                                </div>
                            
                                <div class="clearfix"></div>
                                
                                <div class="oe_structure"></div>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
            
            <div class="oe_structure"/>
        </div>
    </t>
</t>

    
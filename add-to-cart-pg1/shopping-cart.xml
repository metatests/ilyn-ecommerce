<?xml version="1.0"?>
<t name="Shopping Cart" t-name="website_sale.cart">
    <t t-call="website.layout">
        
        <div id="wrap" style="font-family: 'Oxygen', sans-serif">
            <style>
                .first_row_acp{
                    background-color: #f0f0f0;
                    width: 100%;
                }
                ol.breadcrumb{
                    background-color: transparent;
                    padding-top: 25px;
                    margin-bottom: 0;
                    padding-right:0;
                }
                ol.breadcrumb li a, ol.breadcrumb li span{
                    font-size: 12px;
                    color: #656565;
                    text-transform: uppercase;
                }
                .sec_row_acp{
                    padding: 30px;
                    border: 5px solid #f0f0f0;
                }
                .thrd_row_acp{
                    background: #f5f5f5;
                    padding: 20px;
                }
                .act_btn{
                    padding: 15px 35px;
                    border-radius: 0;
                    text-transform: uppercase;
                    font-size: 14px;
                    line-height: 1.3333333;
                    font-weight: bold;
                    font-family: Lato;
                    -webkit-transition: all 0.3s ease-in-out;
                    -moz-transition: all 0.3s ease-in-out;
                    -ms-transition: all 0.3s ease-in-out;
                    -o-transition: all 0.3s ease-in-out;
                    transition: all 0.3s ease-in-out;
                }
                .btn_back_atcp{
                    color: #252525;
                    background: #dedede;
                    min-width: 136px;
                    
                }
                .btn_back_atcp:hover{
                    background: #c1b497;
                    color: white;
                }
                .btn_pc_atcp{
                    background: #c1b497;
                    color: white;
                }
                .btn_pc_atcp:hover{
                    background: #cdc3ab;
                    color: white;
                }
                .breadcrumb_heading_acp{
                    color: #797979;
                    font-weight: 400;
                    font-size:30px;
                }
            </style>
            
            <style>
                @media screen and (min-width: 320px) and (max-width: 767px) {
                    #cart_products td{
                        padding:20px;
                    }
                    #cart_products{
                        font-size:10px;
                    }
                    .breadcrumb_heading_acp{
                        font-size: 24px;
                    }
                    ol.breadcrumb li a, ol.breadcrumb li span {
                        font-size: 10px;
                    }
                    .td-div{
                        margin-top:0 !important;
                    }
                    .act_prod_qty_div{
                        text-align: center;
                    }
                    .actp_prod_tr_border{
                        border-top: 3px solid #f0f0f0;
                    }
                    #order_total_untaxed .pull-right, #order_total_taxes .pull-right, #order_total .pull-right{
                        float:none !important;
                    }
                   
                }
                @media screen and (min-width: 768px) and (max-width: 991px) {
                    .act_btn {
                        padding: 15px 25px;
                    }
                    #cart_products>td{
                        padding-top:8px;
                    }
                    #cart_products{
                        font-size:12px;
                    }
                    .act_prod_qty_div {
                        padding-left: opx;
                    }
                    .input-group-addon {
                        padding: 4px 8px;
                        font-size: 12px;
                    }
                    .oe_website_sale input.js_quantity{
                        font-size:12px;
                    }
                }
                @media screen and (min-width: 992px) and (max-width: 1199px) {
                    
                }
                @media screen and (min-width: 1200px){
                    
                }
            </style>    
            
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 first_row_acp">
                <div class='container'>
                    <div class='col-sm-12 col-xs-12 pad_lrz'>
                        <div class='col-sm-6 col-xs-4 col-lg-6 padleft_zero'>
                            <h2 class="mb16 text-uppercase breadcrumb_heading_acp">Cart</h2>
                        </div>
                        <div class="col-sm-6 col-xs-8 col-lg-6 padright_zero">
                            <ol class="breadcrumb pull-right">
                                <li>
                                    <a href="/">Home</a>
                                </li>
                                <li>
                                    <a href="/shop">Shop</a>
                                </li>
                                <li class="active">
                                    <span>Cart</span>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 mt64 mb64">
                <div class="container oe_website_sale ">
                    <div class='sec_row_acp '>
                        <t t-call="website_sale.wizard_checkout">
                            <t t-set="step" t-value="10"/>
                        </t>
                        <div class="row ">
                            <div class="col-md-12 col-sm-12 oe_cart mt24">
                                <t t-call="website_sale.cart_lines"/>
                                
                                <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12 mt24 mb36 thrd_row_acp">
                                    <div class='col-xs-6 col-sm-6'>
                                        <a href="/shop" class="btn btn_back_atcp act_btn">
                                            <span class="hidden-xs">Back</span>
                                            <span class="visible-xs-inline">Back</span>
                                        </a>
                                    </div>
                                    <div class='col-xs-6 col-sm-2 col-md-3 col-md-offset-2 col-sm-offset-2'>
                                        <a t-if="not optional_products and website_sale_order and website_sale_order.website_order_line" class="btn btn_pc_atcp act_btn btn-block" href="/shop/checkout">
                                            <span class="hidden-xs">Checkout</span>
                                            <span class="visible-xs-inline">Checkout</span>
                                        </a>
                                    </div>
                                </div>
                            
                                <div class="clearfix"></div>
                                
                                <div class="oe_structure"></div>
                            </div>
                        </div>
                        
                    </div>
                    
                </div>
            </div>
            
            <div class="oe_structure"/>
        </div>
    </t>
</t>

    
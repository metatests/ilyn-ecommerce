<?xml version="1.0"?>
<data inherit_id="website.layout" name="Footer Copyright">
    <xpath expr="//footer" position="inside">
      <style>
        .dark_footer{
          background: #1d1a18;
        }
        .footer_line{
            border-top: 1px solid #474747;padding-top: 15px;padding-right:15px; padding-left:15px;
        }
        .padtb15{
            padding-bottom: 15px;padding-top:15px;
            padding-left:0;
            padding-right:0;
        }
        a.footer_anc {
            color: #acacac;
            font-size: 12px;
            line-height: 20px;
            -webkit-transition: all 0.3s ease-in-out;
            -moz-transition: all 0.3s ease-in-out;
            -ms-transition: all 0.3s ease-in-out;
            -o-transition: all 0.3s ease-in-out;
            transition: all 0.3s ease-in-out;
        }
        a.footer_anc:hover{
            color:#c1b497 !important;
            text-decoration: none;
        }
        a.ft_fb:hover{
            color: #3b5998 !important;
        }
        a.ft_yt{
            margin-left: 20px;
        }
        a.ft_yt:hover{
            color: #ff0000 !important;
        }
        
     <!--a {-->
     <!--           color: #25211e; /* 625a49 */-->
     <!--           text-decoration: none;-->
     <!--       }-->
            
     <!--       a:hover,a:focus,a:active {-->
     <!--          color: #25211e !important;-->
     <!--          text-decoration: underline;-->
     <!--       }-->
        
      </style>       
      <div class='dark_footer'>
        <div class="container ">
            
            <div class="text-left col-xs-12 col-sm-4 padtb15" >
                Copyright &amp;copy; <span t-field="res_company.name">Company name</span>
            </div>
            
            <div class='text-left col-xs-12 col-sm-4 padtb15'>
                <div class='col-xs-12 col-sm-6'>
                    <a class='footer_anc' href="#"> Terms and Services </a>
                </div>
                <div class='col-xs-12 col-sm-6'>
                    <a class='footer_anc' href="#"> Replacement Policy </a>
                </div>
            </div>
            
            <div class='text-right col-xs-12 col-sm-4 padtb15'>
                <a href='#' class='footer_anc ft_fb'> <i class='fa fa-2x fa-facebook'></i> </a>
                <a href='#' class='footer_anc ft_yt'> <i class='fa fa-2x fa-youtube'></i> </a> 
            </div>
        </div>
      </div>
    </xpath>
</data>

    
<?xml version="1.0"?>
<t name="Product" t-name="website_sale.product">
    <t t-call="website.layout">
        <t t-set="additional_title" t-value="product.name"/>
        <style>
          
            .first_row{
                background-color: #f0f0f0;
                width: 100%;
            }
            ol.breadcrumb{
                background-color: transparent;
                padding: 25px 0px;
                margin-bottom: 0;
            }
            ol.breadcrumb li a, ol.breadcrumb li.active{
                font-size: 12px;
                color: #656565;
                text-transform: uppercase;
                text-decoration:none;
            }
            
            .product_name_heading_spv{
                /*font-size:24px;*/
                color: #252525;
                font-weight: bold;
                text-transform: uppercase;
                margin-top:-5px !important
            }
            #product_details{
                padding-left: 36px;
            }
            .product_desc_pt_spv{
                line-height: 24px;
                color: #797979;
            }
            #add_to_cart{
                width: 196px;
                background: #c1b497;
                font-size: 14px;
                line-height: 1.8;
                color:white;
                text-transform: uppercase;
                padding:10px 24px;
                border-radius: 0;
                -webkit-transition: all 0.3s ease-in-out;
                -moz-transition: all 0.3s ease-in-out;
                -ms-transition: all 0.3s ease-in-out;
                -o-transition: all 0.3s ease-in-out;
                transition: all 0.3s ease-in-out;
            }
            #add_to_cart:hover{
                background: #cdc3ab;
            }
            .alert{ 
                border-radius 0;
            }
            .js_variant_change{
                margin-right:0 !important;
            }
            .control-label{
                margin: 0 10px !important;
                font-size: 12px;
            }
            input[type="radio"], input[type="checkbox"] {
                margin: 2px 0 0;
                -webkit-transition: all 0.25s ease-in-out;
                -moz-transition: all 0.25s ease-in-out;
                -ms-transition: all 0.25s ease-in-out;
                -o-transition: all 0.25s ease-in-out;
                transition: all 0.25s ease-in-out;
                
            }
            input[type="radio"]:focus{
                -ms-transform: scale(1.3);
                -webkit-transform: scale(1.3); 
                transform: scale(1.3);
            }
            .product_detail_img{
                margin-left:0 !important;
            }
            .size_guide_div{
              /*  border: 2px solid #c1b497; */
                padding-top: 40px;
                padding-bottom: 40px;
            }
            .hr{
                height:2px;
                background-color:#cccccc;
                width: 99% !important;
            }
            
            .carousel .carousel-control.right {
                right: 75px;
            }
            #o-carousel-product .carousel-indicators li {
                width: 110px !important;
            }
        </style>
        <style>
            @media screen and (min-width: 320px) and (max-width: 767px) {
                #singlepg_breadcrumb_prodname_heading{
                    font-size: 18px;
                }
                ol.breadcrumb li a, ol.breadcrumb li.active{
                    font-size: 10px;
                }
                ol.breadcrumb {
                    float: left !important;
                }
                .product_name_heading_spv{
                    font-size: 18px;
                }
                h3.product_price_fontcolor{
                    font-size: 18px;
                }
                
                .ul_hor_prod_att_name{
                    margin-top:32px;
                    margin-bottom:32px;
                }
                #product_details{
                   padding-left: 18px;
                }
            }
            @media screen and (min-width: 768px) and (max-width: 991px) {
                .product_name_heading_spv{
                    font-size: 18px;
                }
                h3.product_price_fontcolor{
                    font-size: 18px;
                }
                .ul_hor_prod_att_name{
                    margin-top:32px;
                    margin-bottom:32px;
                }
                #product_details{
                   padding-left: 18px;
                }
                .product_desc_pt_spv {
                    line-height: 20px;
                    font-size: 13px;
                }
            }
            @media screen and (min-width: 992px) and (max-width: 1199px) {
                
            }
            @media screen and (min-width: 1200px){
                
            }
